        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_car)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_payment)
